{
    "manifest_version": 2,
    "name": "Evernote Shortcuts",
    "version": "0.0.1",

    "description": "This extension adds shortcuts to Evernote web.",
    "author": "Gorka Eguileor",

    "permissions": [ "https://*.evernote.com/Home.action*", "https://evernote.com/Home.action*" ],

    "content_scripts": [
        {
            "matches": [ "https://*.evernote.com/Home.action*", "https://evernote.com/Home.action*" ],
            "js": [ "contentscript.js", "keymanager.js", "utils.js" ],
            "run_at": "document_end"
        }
    ],

    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}
